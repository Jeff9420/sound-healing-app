{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["off"],
    "no-undef": ["error"],
    "prefer-const": ["warn"],
    "no-var": ["error"],
    "eqeqeq": ["warn", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "never"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "space-before-blocks": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"]
  },
  "globals": {
    "AUDIO_CONFIG": "readonly",
    "InternationalizationSystem": "readonly",
    "UserDataManager": "readonly",
    "HistoryFavoritesUI": "readonly",
    "AudioManager": "readonly",
    "gtag": "readonly"
  }
}
