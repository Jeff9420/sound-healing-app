    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/play",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a", ".flac"]
      }
    }
  ],
  "share_target": {
    "action": "/share-recommendation",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
