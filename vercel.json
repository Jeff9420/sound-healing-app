{
  "rewrites": [
    {
      "source": "/api/audio/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/$1"
    },
    {
      "source": "/assets/audio/Animal%20sounds/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/animal-sounds/$1"
    },
    {
      "source": "/assets/audio/Chakra/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/chakra/$1"
    },
    {
      "source": "/assets/audio/Rain/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/rain-sounds/$1"
    },
    {
      "source": "/assets/audio/running%20water/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/water-sounds/$1"
    },
    {
      "source": "/assets/audio/Singing%20bowl%20sound/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/singing-bowls/$1"
    },
    {
      "source": "/assets/audio/Subconscious%20Therapy/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/subconscious-therapy/$1"
    },
    {
      "source": "/assets/audio/Fire/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/fire-sounds/$1"
    },
    {
      "source": "/assets/audio/hypnosis/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/hypnosis/$1"
    },
    {
      "source": "/assets/audio/meditation/(.*)",
      "destination": "https://archive.org/download/sound-healing-collection/meditation/$1"
    },
    {
      "source": "/((?!assets|api|sw|manifest|robots|sitemap|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/audio/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Range, Accept, Content-Type"
        }
      ]
    },
    {
      "source": "/assets/audio/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "text/plain"
        }
      ]
    }
  ]
}