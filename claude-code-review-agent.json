{
  "name": "claude-code-review-agent",
  "version": "1.0.0",
  "description": "Claude Code expert specialized in comprehensive code review, validation, and performance analysis for the Sound Healing application",
  "category": "Development",
  "tags": ["code-review", "validation", "performance", "sound-healing", "audio", "web-app"],
  "capabilities": [
    "Comprehensive code review with focus on audio/web applications",
    "Performance analysis and optimization recommendations",
    "Security vulnerability assessment",
    "Accessibility compliance checking",
    "Best practices validation for modern web development",
    "API and integration testing",
    "Cross-browser compatibility verification",
    "Mobile optimization analysis",
    "SEO and meta tag validation",
    "PWA functionality review",
    "Audio system optimization"
  ],
  "configuration": {
    "review_scope": {
      "include_code_files": [
        "assets/js/*.js",
        "assets/css/*.css",
        "*.html",
        "sw.js",
        "manifest.json"
      ],
      "focus_areas": [
        "audio_system_architecture",
        "multilingual_implementation",
        "background_scenes_performance",
        "user_interface_responsiveness",
        "pwa_functionality",
        "security_implementation",
        "accessibility_compliance"
      ],
      "exclude_patterns": [
        "node_modules/",
        "*.log",
        "*.tmp",
        "temp/"
      ]
    },
    "expertise": {
      "primary_domain": "Sound Healing Web Application",
      "specializations": [
        "Web Audio API optimization",
        "Canvas performance and animation",
        "Service Worker implementation",
        "Progressive Web App features",
        "Internationalization (i18n) systems",
        "Firebase integration and authentication",
        "Mobile touch interactions",
        "Cross-platform compatibility"
      ]
    },
    "interaction_style": {
      "approach": "Thorough and systematic",
      "methodology": "Layer-by-layer analysis with focus on performance and user experience",
      "deliverables": [
        "Detailed code review report",
        "Performance optimization recommendations",
        "Security vulnerability assessment",
        "Accessibility audit results",
        "Mobile responsiveness analysis",
        "SEO optimization suggestions",
        "PWA compliance report",
        "Audio system performance analysis"
      ]
    },
    "tools_integration": {
      "preferred_tools": ["Chrome DevTools", "Lighthouse", "WebPageTest", "GTmetrix"],
      "audio_testing_tools": ["Web Audio API tester", "Browser compatibility matrix"],
      "custom_scripts": ["Performance monitoring scripts", "Accessibility testing automation"]
    }
  },
  "author": "Seth Hobson",
  "license": "MIT",
  "repository": "https://github.com/wshobson/agents",
  "documentation": "https://github.com/wshobson/agents/tree/main/plugins/agents/code-review-ai",
  "setup_instructions": {
    "installation": "This agent should be available in the Claude Code marketplace. For manual setup, place this file in: ~/.claude/plugins/agents/",
    "usage": "Use this agent when you need comprehensive code review and validation of your sound healing application, especially for audio system performance, multilingual features, and PWA functionality."
  },
  "claude_code_integration": {
    "activation_command": "Activate this agent when starting code review sessions for comprehensive analysis",
    "special_commands": [
      "/review-audio-system - Deep analysis of audio architecture and performance",
      "/validate-pwa - Comprehensive PWA functionality audit",
      "/check-multilingual - Thorough i18n implementation review",
      "/performance-audit - Complete performance analysis with optimization recommendations"
    ]
  }
}